<?xml version="1.0"?>
<config>
    <sections>
        <system>
            <groups>
                <cdn translate="label" module="cdn">
                    <label>Qiniu CDN</label>
                    <tab>qiniu</tab>
                    <frontend_type>text</frontend_type>

                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>

                    <sort_order>50</sort_order>
                    <fields>
                        <enable translate="label">
                            <label>Enable Qiniu CDN</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_cache</backend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <access_key translate="label">
                            <label>Access Key</label>
                            <frontend_type>text</frontend_type>
                            
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            
                            <sort_order>1</sort_order>
                        </access_key>
                        
                        <secret_key translate="label">
                            <label>Secret Key</label>
                            <frontend_type>password</frontend_type>
                            
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            
                            <sort_order>2</sort_order>
                        </secret_key>
                        
                        <bucket translate="label">
                            <label>Bucket name</label>
                            <frontend_type>text</frontend_type>
                            
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            
                            <sort_order>3</sort_order>
                        </bucket>
                        
                        <prefix translate="label">
                            <label>Prefix</label>
                            <frontend_type>text</frontend_type>
                            
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            
                            <sort_order>4</sort_order>
                        </prefix>
                        
                        <domain translate="label">
                            <label>Domain</label>
                            <frontend_type>text</frontend_type>
                            
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            
                            <sort_order>5</sort_order>
                        </domain>

                        <small_image_style translate="label">
                            <label>Picture Processor Code(small_image)</label>
                            <frontend_type>text</frontend_type>

                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>

                            <sort_order>6</sort_order>
                        </small_image_style>

                        <thumbnail_style translate="label">
                            <label>Picture Processor Code(thumbnail)</label>
                            <frontend_type>text</frontend_type>

                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>

                            <sort_order>7</sort_order>
                        </thumbnail_style>

                        <md5_file_name translate="label">
                            <label>Rename Filename( use md5_file )</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_cache</backend_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </md5_file_name>
                    </fields>
                </cdn>
            </groups>
        </system>
    </sections>
</config>
